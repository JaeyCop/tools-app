{
  "name": "simple-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/setup-pdf-worker.js && next dev -H localhost",
    "build": "node scripts/setup-pdf-worker.js && next build",
    "start": "npx -y serve@14 -s out -l 3000",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "export": "STATIC_EXPORT=true node scripts/setup-pdf-worker.js && STATIC_EXPORT=true next build",
    "deploy": "npm run export",
    "favicons": "node scripts/generate-favicons.js",
    "preview": "npx -y serve@14 -s out -l 3000"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.23.12",
    "jszip": "^3.10.1",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.54",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
